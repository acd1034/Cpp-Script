{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build and run",
      "type": "shell",
      "dependsOn": [
        "build",
        "run",
        "clean"
      ],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "build and run2",
      "type": "shell",
      "dependsOn": [
        "build",
        "run2",
        "clean"
      ],
      "dependsOrder": "sequence",
      "group": "build"
    },
    {
      "label": "build",
      "type": "shell",
      "command": "clang++",
      "args": [
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "-std=c++17",
        "-Weverything",
        "-Wno-c++98-compat-pedantic",
        "-Wc++98-c++11-c++14-c++17-compat-pedantic",
        "-Wno-missing-prototypes",
        "-Wno-shadow-field-in-constructor",
        "-Wno-shadow-uncaptured-local",
        "-I${fileDirname}",
        "-I${workspaceFolder}/include",
        "-I/Users/ryo/vcpkg/installed/x64-osx/include",
      ],
      "presentation": {
        "clear": true,
        "echo": false,
        "panel": "shared",
        "showReuseMessage": false
      }
    },
    {
      "label": "run",
      "type": "shell",
      "command": "${fileDirname}/${fileBasenameNoExtension}",
      "args": [
        "<",
        "${workspaceFolder}/.vscode/input.txt",
      ],
      "presentation": {
        "echo": false,
        "panel": "shared",
        "showReuseMessage": false
      }
    },
    {
      "label": "run2",
      "type": "shell",
      "command": "rm",
      "args": [
        "${fileDirname}/${fileBasenameNoExtension}.txt",
        ";",
        "${fileDirname}/${fileBasenameNoExtension}",
        "<",
        "${workspaceFolder}/.vscode/input.txt",
        ">",
        "${fileDirname}/${fileBasenameNoExtension}.txt",
      ],
      "presentation": {
        "echo": false,
        "panel": "shared",
        "showReuseMessage": false
      }
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "rm",
      "args": [
        "${fileDirname}/${fileBasenameNoExtension}",
      ],
      "presentation": {
        "echo": false,
        "panel": "shared"
      }
    },
  ]
}
