{
  // https://go.microsoft.com/fwlink/?LinkId=733558
  // https://code.visualstudio.com/docs/editor/variables-reference
  "tasks": [
    {
      "label": "Clang Debug Build",
      "command": "clang++",
      "args": [
        "${file}",
        "-g",
        "-O0",
        "-std=c++2a",
        "-Wall",
        "-Wextra",
        "-pedantic",
        "-I${workspaceFolder}/include",
        "-I/Users/ryo/vcpkg/installed/x64-osx/include",
      ],
    },
    {
      "label": "Clang Debug Run",
      "command": "clang++",
      "args": [
        "${file}",
        "-g",
        "-O0",
        "-std=c++2a",
        "-Wall",
        "-Wextra",
        "-pedantic",
        "-I${workspaceFolder}/include",
        "-I/Users/ryo/vcpkg/installed/x64-osx/include",
        "&&",
        "./a.out",
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
    },
    {
      "label": "GCC Debug Build",
      "command": "g++-10",
      "args": [
        "${file}",
        "-g",
        "-O0",
        "-std=c++20",
        "-Wall",
        "-Wextra",
        "-pedantic",
        "-I${workspaceFolder}/include",
        "-I/Users/ryo/vcpkg/installed/x64-osx/include",
      ],
    },
    {
      "label": "GCC Debug Run",
      "command": "g++-10",
      "args": [
        "${file}",
        "-g",
        "-O0",
        "-std=c++20",
        "-Wall",
        "-Wextra",
        "-pedantic",
        "-I${workspaceFolder}/include",
        "-I/Users/ryo/vcpkg/installed/x64-osx/include",
        "&&",
        "./a.out",
      ],
    },
    {
      "label": "Clean",
      "command": "rm",
      "args": [
        "-r",
        "*"
      ],
    },
    {
      "label": "Doxygen",
      "command": "doxygen",
      "args": [
        "Doxyfile",
        "&&",
        "open",
        "./docs/index.html"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
    },
  ],
  "type": "shell",
  "options": {
    "cwd": "${workspaceFolder}/build"
  },
  "problemMatcher": "$gcc",
  "presentation": {
    "clear": true,
    "echo": false,
    "reveal": "always",
    "showReuseMessage": true,
  },
  "version": "2.0.0",
}
