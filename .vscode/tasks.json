{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build active file",
      "type": "shell",
      "command": "clang++",
      "args": [
        "${file}",
        "-o",
        "${workspaceFolder}/a.out",
        "-std=c++17",
        "-Wall",
        "-pedantic",
        "-I",
        "${workspaceFolder}/include",
        "&&",
        "{",
        "${workspaceFolder}/a.out",
        "<",
        "${workspaceFolder}/.vscode/input.txt",
        ";",
        "rm",
        "-r",
        "${workspaceFolder}/a.out",
        "}",
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": false,
        "reveal": "always",
        "panel": "shared",
        "clear": true
      }
    },
    {
      "label": "build before debug",
      "type": "shell",
      "command": "clang++",
      "args": [
        "-std=c++17",
        "-g",
        "-Wall",
        "-pedantic",
        "-o",
        "${workspaceFolder}/a.out",
        "${file}",
      ],
      "group": "build",
      "presentation": {
        "echo": false,
        "reveal": "always",
        "panel": "shared",
        "clear": false,
      }
    },
  ]
}