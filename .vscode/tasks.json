{
  // https://go.microsoft.com/fwlink/?LinkId=733558
  // https://code.visualstudio.com/docs/editor/variables-reference
  "tasks": [
    {
      "label": "clang++ Debug",
      "command": "clang++",
      "args": [
        "${file}",
        "-g",
        "-O0",
        "-std=c++2a",
        "-Wall",
        "-Wextra",
        "-pedantic",
        "-I${workspaceFolder}/include",
        "-I/Users/ryo/vcpkg/installed/x64-osx/include"
      ]
    },
    {
      "label": "g++ Debug",
      "command": "g++-9",
      "args": [
        "${file}",
        "-g",
        "-O0",
        "-std=c++2a",
        "-Wall",
        "-Wextra",
        "-pedantic",
        "-I${workspaceFolder}/include",
        "-I/Users/ryo/vcpkg/installed/x64-osx/include"
      ]
    },
    {
      "label": "clang++ Run",
      "command": "./a.out",
      "dependsOn": "clang++ Debug",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "showReuseMessage": true
      }
    },
    {
      "label": "g++ Run",
      "command": "./a.out",
      "dependsOn": "g++ Debug",
      "presentation": {
        "reveal": "always",
        "showReuseMessage": true
      }
    },
    {
      "label": "clean",
      "command": "rm",
      "args": [
        "-r",
        "*"
      ]
    },
  ],
  "type": "shell",
  "options": {
    "cwd": "${workspaceFolder}/build"
  },
  "problemMatcher": "$gcc",
  "presentation": {
    "clear": true,
    "echo": false,
    "reveal": "silent",
    "showReuseMessage": false,
  },
  "version": "2.0.0",
}
